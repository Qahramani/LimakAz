@model NewsUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Yarat
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <input asp-for="@Model.NewsDetails[0].LanguageId" value="1" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.NewsDetails[0].Title">Azərbaycanca başlıq</label>
                    <input class="form-control" required asp-for="@Model.NewsDetails[0].Title" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.NewsDetails[0].Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewsDetails[0].Description">Azərbaycanca Təsvir</label>
                    <input class="form-control" required asp-for="@Model.NewsDetails[0].Description" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.NewsDetails[0].Description" class="text-danger"></span>
                </div>

                <br />
                <br />
                <hr />

                <input asp-for="@Model.NewsDetails[1].LanguageId" value="2" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.NewsDetails[1].Title">Rusca başlıq</label>
                    <input class="form-control" required asp-for="@Model.NewsDetails[1].Title" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.NewsDetails[1].Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.NewsDetails[1].Description">Rusca Təsvir</label>
                    <input class="form-control" required asp-for="@Model.NewsDetails[1].Description" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.NewsDetails[1].Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input class="form-control" asp-for="ImageFile" placeholder="dəyər daxil edin">
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Yarat</button>

                <a class="btn btn-light" asp-action="Index">Ləğv et</a>

            </form>
        </div>
    </div>
</div>




