@model ShopCreateDto
<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">Yarat</p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label for="exampleInputUsername1">Link</label>
                    <input class="form-control" id="input1" asp-for="Link" placeholder="Name">
                    <span asp-validation-for="Link" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="CountryId">Ölkə seç</label>
                    <select asp-for="CountryId" class="form-control">
                        <option value="@null" selected>Choose Category</option>
                        @foreach (var category in Model.Countries ?? new())
                        {
                            <option value="@category.Value">@category.Text</option>
                        }
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Kategoriya(lar) seç)</label>
                    <select asp-items="Model.Categories" asp-for="SelectedCategoryIds" class="form-control" placeholder="tags" multiple="multiple"></select>
                    <span asp-validation-for="SelectedCategoryIds"></span>
                </div>

                
                <!-- Image Upload Section -->
                <div class="form-group">
                    <label for="ImageFile">Şəkil seç</label>
                    <div class="custom-file-upload">
                        <button type="button" class="btn btn-primary" onclick="document.getElementById('ImageFile').click()">Şəkil seç</button>
                        <span id="fileName" class="ml-2">No file selected</span>
                    </div>
                    <input type="file"
                           asp-for="ImageFile"
                           id="ImageFile"
                           accept="image/*"
                           style="display: none;"
                           onchange="updateFileName(event); previewImage(event)"
                           required />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>

                    <div class="mt-3">
                        <p><strong>Preview:</strong></p>
                        <img id="imagePreview" src="#" alt="No image selected" style="max-width: 200px; display: none; border: 1px solid #ccc; padding: 5px;" />
                    </div>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Yarat</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>
            </form>
        </div>
    </div>
</div>
