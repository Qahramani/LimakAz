@model LocalPointUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Yenilə
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                <input asp-for="@Model.LocalPointDetails[0].LanguageId" value="1" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[0].Name">Azərbaycanca yer</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[0].Name" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[0].Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[0].Description">Azərbaycanca yer haqqında ətraflı məlumat</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[0].Description" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[0].Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[0].WorkingHourse">Azərbaycanca iş saatlar</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[0].WorkingHourse" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[0].WorkingHourse" class="text-danger"></span>
                </div>
                <hr />

                <input asp-for="@Model.LocalPointDetails[1].LanguageId" value="2" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[1].Name">Rusca yer</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[1].Name" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[1].Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[1].Description">Rusca yer haqqında ətraflı məlumat</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[1].Description" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[1].Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LocalPointDetails[1].WorkingHourse">Rusca iş saatlar</label>
                    <input class="form-control" required asp-for="@Model.LocalPointDetails[1].WorkingHourse" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.LocalPointDetails[1].WorkingHourse" class="text-danger"></span>
                </div>


                <button type="submit" class="btn btn-primary mr-2">Yenilə</button>

                <a class="btn btn-light" asp-action="Index">Ləğv et</a>

            </form>
        </div>
    </div>
</div>




