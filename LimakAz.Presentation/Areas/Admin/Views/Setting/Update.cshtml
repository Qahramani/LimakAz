@model SettingUpdateDto

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-description">
                Parametri dəyişdir
            </p>
            <form method="post" class="forms-sample" enctype="multipart/form-data">

                <div class="text-danger" asp-validation-summary="ModelOnly"></div>


                <div class="form-group">
                    <label for="exampleInputUsername1">Açar söz</label>
                    <input class="form-control" asp-for="Key" disabled placeholder="Açar sözü daxil edin">
                    <span asp-validation-for="Key" class="text-danger"></span>
                </div>

                <br />
                <br />
                <hr />

                <input asp-for="@Model.SettingDetails[0].LanguageId" value="1" type="hidden" />
                <div class="form-group">
                    <label for="exampleInputUsername1">Azərbaycanca ad</label>
                    <input class="form-control" required asp-for="@Model.SettingDetails[0].Value" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.SettingDetails[0].Value" class="text-danger"></span>
                </div>


                <br />
                <br />
                <hr />

                <input asp-for="@Model.SettingDetails[1].LanguageId" value="3" type="hidden" />
                <div class="form-group">
                    <label for="exampleInputUsername1">Rusca ad</label>
                    <input class="form-control" required asp-for="@Model.SettingDetails[1].Value" placeholder="Dəyər daxil edin">
                    <span asp-validation-for="@Model.SettingDetails[1].Value" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary mr-2">Dəyişdir</button>
                <a class="btn btn-light" asp-action="Index">Ləğv et</a>

            </form>
        </div>
    </div>
</div>






