@model List<ContentGetDto>﻿
@inject ContentLocalizer _localizer;
<!-- Main Start -->
<main id="main"
      style="background: url('@Url.Content("~/assets2/images/limak_bg.jpg")') no-repeat; background-size: 100%; background-position: top center;"
      class="bg-full">
    <div class="main-container">
        <!-- Privacy Start -->
        <section class="privacy">
            <div class="block">
                <div class="block-header">
                    <h2 class="block-title">@_localizer.GetValue("Policy")</h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="home" asp-action="index">@_localizer.GetValue("Home")</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <span>@_localizer.GetValue("Policy")</span>
                        </li>
                    </ul>
                </div>
                <div class="block-body">
                    <div class="card card-privacy">
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                
                            <div class="card-text">
                                <h5>@item.ContentDetails.FirstOrDefault()?.Key</h5>
                                <br>
                                <p>&nbsp;</p>
                                <p>
                                    @item.ContentDetails.FirstOrDefault()?.Value
                                </p>
                            </div>
                            <hr />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- Privacy End -->
    </div>
</main>
<!-- Main End -->