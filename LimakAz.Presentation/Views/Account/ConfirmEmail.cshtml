@{
    ViewData["Title"] = "Confirm Your Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="max-width: 500px; width: 100%;">
            <div class="text-center">
                <h1 class="h4 mb-3 text-primary">Confirm Your Email</h1>
                <p class="text-muted">
                    We've sent a confirmation email to your registered address. Please check your inbox and click the confirmation link to complete your registration.
                </p>
            </div>

            <div class="d-grid mb-3">
                <form asp-action="ResendEmail" method="post">
                    <button type="submit" class="btn btn-primary btn-block">
                        Resend Confirmation Email
                    </button>
                </form>
            </div>

            <div class="text-center mt-3">
                <p class="text-muted">Haven't registered yet?</p>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary">
                    Back to Registration
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
