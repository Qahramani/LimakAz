@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityError>

<div style="text-align: center; margin-top: 50px;">
    <h1>Verification Failed</h1>
    <p>We couldn't verify your email. Please try again or contact support.</p>
    <ul>
        @if (Model != null)
        {
            foreach (var error in Model)
            {
                <li>@error.Description</li>
            }
        }
    </ul>
    <a asp-controller="home" asp-action="index" class="btn btn-primary">Go to Homepage</a>
</div>
