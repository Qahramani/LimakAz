@model List<TariffUiGetDto>

@inject TariffsLocalizer _localizer;

<style>
    .tariff-card-left{
        height : auto;
    }

    .tariff-main-pg{
        height:auto;
    }

    .tarif-block {
     height:auto;
    }
</style>
<!-- Middle Sections -->
<div>
    <!-- Middle Section -->
    <div class="middlecontainer">
        <!-- Tariff Plans -->
        <div class="tariff-main-pg">
            <div class="tarif-block">
                <div class="tarif-head">
                    <div>
                        <h4>@_localizer.GetValue("TariffsByCountries")</h4>
                    </div>
                    <ol class="tarif-breadcamp">
                        <li>
                            <a asp-controller="home" asp-action="index">@_localizer.GetValue("Home")</a>
                        </li>
                        <li>
                            <i class="fa-solid fa-angle-right"></i>
                        </li>
                        <li>
                            <a asp-controller="tariffs"><span>@_localizer.GetValue("tariffs")</span></a>
                        </li>
                    </ol>
                    <div class="slider-btn">
                        <button class="move-prev" type="button">
                            <i class="fa-solid fa-arrow-left"></i>
                        </button>
                        <button class="move-next" type="button">
                            <i class="fa-solid fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
                <div class="slider-container">
                    <div class="tarif-card">
                        @foreach (var item in Model)
                        {

                            <div class="tariff-card-left card-slide">
                                <div class="tarif-card-header">
                                    <img src="@item.ImagePath" style="border-radius:50%" alt="">
                                    <h3>@item.CountryName</h3>
                                </div>
                                <div style="width: 350px;">
                                    <div class="row tarif-item-row">
                                        @foreach (var point in item.LocalPoints)
                                        {

                                            <a class="tarif-item  col-md-2">
                                                <span>@point</span>
                                            </a>
                                        }
                                    </div>
                                </div>
                                <div class="tarif-price">
                                    <table class="table">
                                        <tbody class="tarif-table-main">
                                            @foreach (var tariff in item.Tariffs)
                                            {

                                                <tr class="tarif-table">
                                                    <td class="tarif-table-body table-body-mob">
                                                        <span class="weight-1">@tariff.Value @_localizer.GetValue("Kg")</span>
                                                    </td>
                                                    <td class="tarif-table-body table-body-mob">
                                                        <span class="price-2">@tariff.PriceInAZN | @tariff.PriceInUSD</span>
                                                    </td>
                                                </tr>

                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
