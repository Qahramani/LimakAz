@model UserSettingDto
@{
    UserProfileUpdateDto profileDto = Model.UserProfileInfo ?? new();
    UserPasswordUpdateDto passwordDto = Model.UserPasswordInfo ?? new();
}

@{
    ViewData["Template"] = "Template2";
}

<!-- Main Start -->
<main id="main"
style="background: url('@Url.Content("~/assets2/images/limak_bg.jpg")')no-repeat; background-size: 100%; background-position: top center;"
class="bg-full">
    <div class="main-container" style="max-width: 114rem;">
        <section id="user-panel">
            <div class="block">
                <div class="block-header">
                    <h2 class="block-title" style="font-size: 17px;text-transform: uppercase;">
                        İstifadəçi Paneli
                    </h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="index.html">Ana səhifə</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <span>İstifadəçi Paneli</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <!-- Aside -->
                <div class="col-md-4 col-lg-3 col-12">
                    @await Component.InvokeAsync("UserPanel")
                </div>
                <!-- Content -->
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <div>
                        <div class="content">
                            <div class="row">
                                <div>
                                    <ul id="headerList" class="nav nav nav-tabs card-tabs-nav">
                                        <li class="nav-item">
                                            <a href="#" class="nav-link active" data-target="1">
                                                <span class="card-tabs-nav-title">
                                                    Hesab məlumatları
                                                </span>
                                            </a>
                                        </li>
                                        <li class="nav-item card-tabs">
                                            <a href="#" class="nav-link" data-target="2">
                                                <span class="card-tabs-nav-title">Şifrə</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="tab-content card-tabs-body">
                                <div class="tab-pane active active-tab" data-id="1">
                                    <div class="card order-item order-item-settings">
                                        <div class="card-body">
                                            <div class="card-step">
                                                <form asp-controller="userpanel" asp-action="UpdateProfile" method="post" class="form-settings">
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <input asp-for="UserProfileInfo.Firstname" type="text" placeholder="Ad"
                                                            class="form-control">
                                                            <span class="text-danger" asp-validation-for="UserProfileInfo.Firstname"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <input asp-for="UserProfileInfo.Lastname" type="text" placeholder="Soyad"
                                                            class="form-control">
                                                            <span class="text-danger" asp-validation-for="UserProfileInfo.Lastname"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <select asp-items="profileDto.LocalPoints" asp-for="UserProfileInfo.LocalPointId" class="custom-select">
                                                                <option disabled="disabled" value="">
                                                                    -- Çatdırılma
                                                                    ofisi --
                                                                </option>
                                                            </select>
                                                        </div>
                                                        <div class="col-6">
                                                            <div>
                                                                <div class="date-input">
                                                                    <input asp-for="UserProfileInfo.BirthDate" class="date-input-regr form-control"
                                                                    id="validationCustom08" max="2030-01-01"
                                                                    required="required">
                                                                    <span class="text-danger" asp-validation-for="UserProfileInfo.BirthDate"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <input asp-for="UserProfileInfo.Address" type="text" placeholder="Adress"
                                                            class="form-control">
                                                            <span class="text-danger" asp-validation-for="UserProfileInfo.Address"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="regr-phone-group" role="group">
                                                                <div class="phone-prefix-regr">
                                                                    <div class="dropdown b-dropdown btn-group">
                                                                        <select class="dropdown-select-prefix" asp-for="UserProfileInfo.NumberPrefixType">
                                                                            <option value="50">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">050</a>
                                                                            </option>
                                                                            <option value="99">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">099</a>
                                                                            </option>
                                                                            <option value="55">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">055</a>
                                                                            </option>
                                                                            <option value="51">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">051</a>
                                                                            </option>
                                                                            <option value="70">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">070</a>
                                                                            </option>
                                                                            <option value="77">
                                                                                <a href="#" target="_self"
                                                                                class="dropdown-option">077</a>
                                                                            </option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                                <input asp-for="UserProfileInfo.PhoneNumber" placeholder="Telefon"
                                                                class="form-control reg-phoneNum" id="validationCustom"
                                                                required>
                                                            </div>
                                                            <span class="text-danger" style="margin-left:10px" asp-validation-for="UserProfileInfo.PhoneNumber"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <button type="submit" class="btn btn-submit btn-primary">
                                                                <span>Yadda saxla</span>
                                                            </button>
                                                            @{
                                                                var result = Model.UserProfileInfo;
                                                            }
                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane active-tab" data-id="2">
                                    <div class="card order-item order-item-safety">
                                        <div class="card-body custom-padding">
                                            <form asp-controller="userpanel" asp-action="UpdatePassword" method="post" class="form-safety">
                                                <div class="row">
                                                    <div class="col-lg-6 col-12">
                                                        <div class="card-step">
                                                            <h3 class="step-title upper">CARİ ŞİFRƏ</h3>
                                                            <div role="group" class="input-group search">
                                                                <input asp-for="@passwordDto.Password" id="currentPass" type="password"
                                                                       placeholder="Şifrə" required="required"
                                                                       aria-required="true" class="form-control">
                                                                <div class="input-group-append">
                                                                    <button type="button" class="btn btn-info"
                                                                            id="eyeBtn">
                                                                        <i class="far fa-eye-slash"></i>
                                                                    </button>
                                                                </div>
                                                                <span class="text-danger" asp-validation-for="@passwordDto.Password"></span>

                                                            </div>
                                                        </div>
                                                        <div class="card-step custom-card-step">
                                                            <h3 class="step-title upper">YENİ ŞİFRƏ</h3>
                                                            <input asp-for="@passwordDto.NewPassword" id="newPass" type="password" placeholder="Şifrə"
                                                                   required="required" aria-required="true"
                                                                   class="form-control" aria-autocomplete="list">
                                                            <span class="text-danger" asp-validation-for="@passwordDto.Password"></span>
                                                            <input asp-for="@passwordDto.ConfirmPassword" id="newPassRepeat" type="password"
                                                                   placeholder="Təkrar şifrə" required="required"
                                                                   aria-required="true" class="form-control">
                                                            <span class="text-danger" asp-validation-for="@passwordDto.ConfirmPassword"></span>
                                                        </div>
                                                        <button type="submit"
                                                                class="btn btn-submit btn-primary ">
                                                            <span>
                                                                Yadda saxla
                                                            </span>
                                                        </button>
                                                    </div>
                                                   
                                                    <div class="col-lg-6 col-12">
                                                        <div class="form-password-info h100">
                                                            <div class="text-center">
                                                                <img src="~/assets2//images//safety.svg" alt="">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
<!-- Main End -->