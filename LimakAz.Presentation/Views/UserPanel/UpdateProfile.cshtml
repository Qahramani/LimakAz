@model UserProfileUpdateDto
@inject UserPanelLocalizer _localizer;
<style>
    .regr-phone-group {
        display: flex;
        align-items: flex-start;
    }

    .phone-prefix-regr {
        margin-right: 10px;
    }

    .dropdown-select-prefix {
        width: 80px; 
        height: 38px; 
        padding: 5px;
        font-size: 14px;
        border-radius: 8px; 
        border: 1px solid #ced4da; 
    }

    .reg-phoneNum {
        flex: 1; 
        height: 38px; 
        padding: 5px;
        font-size: 14px;
        border-radius: 0.25rem;
        border: 1px solid #ced4da; 
    }

    .text-danger {
        margin-top: 5px;
    }

</style>
@{
    ViewData["Template"] = "Template2";
}

<!-- Main Start -->
<main id="main"
      style="background: url('@Url.Content("~/assets2/images/limak_bg.jpg")')no-repeat; background-size: 100%; background-position: top center;"
      class="bg-full">
    <div class="main-container" style="max-width: 114rem;">
        <section id="user-panel">
            <div class="block">
                <div class="block-header">
                    <h2 class="block-title" style="font-size: 17px;text-transform: uppercase;">
                        @_localizer.GetValue("UserPanel")
                    </h2>
                    <ul class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="home" asp-action="index">@_localizer.GetValue("Home")</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <span>@_localizer.GetValue("UserPanel")</span>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="row">
                <!-- Aside -->
                <div class="col-md-4 col-lg-3 col-12">
                    @await Component.InvokeAsync("UserPanel")
                </div>
                <!-- Content -->
                <div class="col-sm-12 col-md-8 col-lg-9">
                    <div>
                        <div class="content">
                            <div class="row">
                                <div>
                                    <ul id="headerList" class="nav nav nav-tabs card-tabs-nav">
                                        <li class="nav-item">
                                            <a asp-action="UpdateProfile" class="nav-link active">
                                                <span class="card-tabs-nav-title">
                                                    @_localizer.GetValue("ProfileInfo")
                                                </span>
                                            </a>
                                        </li>
                                        <li class="nav-item card-tabs">
                                            <a asp-action="updatepassword" class="nav-link">
                                                <span class="card-tabs-nav-title">@_localizer.GetValue("Password")</span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="tab-content card-tabs-body">
                                <div class="tab-pane active active-tab">
                                    <div class="card order-item order-item-settings">
                                        <div class="card-body">
                                            <!-- Main End -->
                                            <div class="card-step">
                                                <form asp-controller="userpanel" asp-action="UpdateProfile" method="post" class="form-settings">
                                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <input asp-for="Firstname" type="text" placeholder="Ad"
                                                                   class="form-control">
                                                            <span class="text-danger" asp-validation-for="Firstname"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <input asp-for="Lastname" type="text" placeholder="Soyad"
                                                                   class="form-control">
                                                            <span class="text-danger" asp-validation-for="Lastname"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <select asp-items="@Model.LocalPoints" asp-for="LocalPointId" class="custom-select">
                                                                <option disabled="disabled" value="">
                                                                    -- @_localizer.GetValue("DeliveryOffice") --
                                                                </option>
                                                            </select>
                                                        </div>
                                                        <div class="col-6">
                                                            <div>
                                                                <div class="date-input">
                                                                    <input asp-for="BirthDate" class="date-input-regr form-control"
                                                                           id="validationCustom08" max="2030-01-01"
                                                                           required="required">
                                                                    <span class="text-danger" asp-validation-for="BirthDate"></span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="col-6">
                                                            <input asp-for="Address" type="text" placeholder="Adress"
                                                                   class="form-control">
                                                            <span class="text-danger" asp-validation-for="Address"></span>
                                                        </div>
                                                        <div class="col-6">
                                                            <div class="regr-phone-group" role="group">
                                                                <!-- Prefix Dropdown -->
                                                                <div class="phone-prefix-regr">
                                                                    <select class="dropdown-select-prefix" asp-for="NumberPrefixType">
                                                                        <option value="50">050</option>
                                                                        <option value="99">099</option>
                                                                        <option value="55">055</option>
                                                                        <option value="51">051</option>
                                                                        <option value="70">070</option>
                                                                        <option value="77">077</option>
                                                                    </select>
                                                                </div>

                                                                <!-- Phone Number Input -->
                                                                <input asp-for="PhoneNumber" placeholder="Telefon"
                                                                       class="form-control reg-phoneNum" id="validationCustom"
                                                                       required>
                                                            </div>
                                                            <span class="text-danger" style="margin-left:10px" asp-validation-for="PhoneNumber"></span>
                                                        </div>

                                                        <div class="col-6">
                                                            <button type="submit" class="btn btn-submit btn-primary">
                                                                <span>@_localizer.GetValue("Save")</span>
                                                            </button>
                                                            <span style="color:green;margin-left:30px;font-weight:700">@ViewBag.SuccessMessage</span>

                                                        </div>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
